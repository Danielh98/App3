<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App3.ViewDos">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="LOGIN"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Entry x:Name="txtUsuario" Placeholder="Ingrese usuario"/>
            <Entry x:Name="txtContraseña" Placeholder="Ingrese la contraseña" IsPassword="True" />

            <Button x:Name="btnAbrir" Text="Ingresar" Clicked="btnAbrir_Clicked"/>

            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>